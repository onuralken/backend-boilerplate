{
  "name": "backend-boilerplate-test",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "npx tsc",
    "start": "node dist/app/index.js",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/app/index.js\"",
    "prepare": "husky install",
    "lint": "eslint --ignore-path .gitignore",
    "format": "prettier --ignore-path .gitignore --write --ignore-unknown",
    "migrate": "prisma migrate dev",
    "prod": "npx prisma migrate deploy && npx prisma generate && npx tsc && node dist/app/index.js"
  },
  "author": "onuralken",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^4.3.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.3.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.7.14",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "concurrently": "^7.3.0",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.19",
    "prettier": "2.7.1",
    "prisma": "^4.3.0",
    "typescript": "^4.8.2"
  },
  "lint-staged": {
    "*": [
      "npm run lint",
      "npm run format"
    ]
  }
}
